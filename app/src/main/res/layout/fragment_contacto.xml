<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.personal.comunitarias.ContactoFragment"
    android:background="@drawable/fondo2">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:text="Horario de atención: 08h30 a 17h00."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:id="@+id/textView3"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_below="@+id/textView2"
                    android:textSize="17sp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"/>

                <TextView
                    android:text="Envía tus comentarios y sugerencias a: comunicacion@cpccs.gob.ec                     nos comunicaremos contigo lo antes posible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="75dp"
                    android:id="@+id/textView4"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_below="@+id/textView2"
                    android:textSize="17sp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center" />

                <TextView
                    android:text="El CPCCS funciona en oficinas en todo el país. "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/textView5"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:layout_marginRight="30dp"
                    android:layout_below="@+id/textView4"
                    android:textSize="17sp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:text="Dirección"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/textView6"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_below="@+id/textView5"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="textStart" />

                <TextView
                    android:text="QUITO Dirección: Santa Prisca 425 entre Vargas y Pasaje Ibarra "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/textView7"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_below="@+id/textView6"
                    android:textSize="17sp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center" />

                <TextView
                    android:text="Edificio Centenario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/textView8"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_below="@+id/textView7"
                    android:textSize="17sp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="textStart" />

                <TextView
                    android:text="Telefono: (593-2) 3957210"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/textView9"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_below="@+id/textView8"
                    android:textSize="17sp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="textStart" />

                <TextView
                    android:text="Contáctenos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:gravity="center"
                    android:layout_marginTop="26dp"
                    android:textStyle="normal|bold"
                    android:textSize="24sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />


            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
