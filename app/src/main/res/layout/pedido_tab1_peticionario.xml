<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1260dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_Nombres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000">

            <EditText
                android:id="@+id/txt_Nombres_petic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombres"
                android:inputType="textCapWords"
                android:maxLength="25"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_Apellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <EditText
                android:id="@+id/txt_Apellidos_petic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos"
                android:inputType="textCapWords"
                android:maxLength="25"
                android:textSize="16sp"

                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_edad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp">

            <EditText
                android:id="@+id/txt_edad_P"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edad"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="16sp"

                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_Correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp">

            <EditText
                android:id="@+id/txt_correo_petic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:textSize="16sp"

                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_Telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp">

            <EditText
                android:id="@+id/txt_telefonop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Teléfono"
                android:inputType="number"
                android:maxLength="10"
                android:textSize="16sp"

                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_Direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp">

            <EditText
                android:id="@+id/txt_direccionp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dirección"
                android:inputType="textCapWords"
                android:maxLength="25"
                android:textSize="16sp"

                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_organizacion_social"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp">

            <EditText
                android:id="@+id/txt_org_social_P"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Organización Social"
                android:inputType="textCapWords"
                android:maxLength="25"
                android:textSize="16sp"

                />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="440dp"
            android:text="Ocupación"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerOcupacionPedido"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView23"
            android:gravity="left" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="490dp"
            android:text="Tipo de Identificación"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_pet_tipIden"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView2"
            android:gravity="left" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_TipoIdentificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="540dp">

            <EditText
                android:id="@+id/txt_tipoIdent_petic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Identificación"
                android:inputType="number"
                android:maxLength="11" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="620dp"
            android:text="Género"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/spinner_pet_gener"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView3"
            android:gravity="left" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="670dp"
            android:text="Estado Civil"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/spinner_pet_estado_civil"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView4"
            android:gravity="left" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="720dp"
            android:text="Nivel de educación"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/spinner_pet_educa"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView5"
            android:gravity="left" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_TipoOcupacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="770dp">

            <EditText
                android:id="@+id/txt_cargo_peticionario_P"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cargo"
                android:inputType="textCapWords"
                android:maxLength="25" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="850dp"
            android:text="Nacionalidad"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/spinner_pet_naciona"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView6"
            android:gravity="left" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="900dp"
            android:text="Reside en el extranjero"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/spinner_pet_resid"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView7"
            android:gravity="left" />

        <TextView
            android:id="@+id/textViewPais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="950dp"
            android:text="Pais"
            android:textColor="#000000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/spinner_pet_pais"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textViewPais"
            android:gravity="left"
            tools:text="Ecuador" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="1000dp"
            android:text="Provincia"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/spinner_pet_provin"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView8"
            android:gravity="left" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="1050dp"
            android:text="Ciudad"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/spinner_pet_ciud"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView9"
            android:gravity="left" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="1100dp"
            android:text="Etnia"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/spinner_pet_etnia"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView10"
            android:gravity="left" />

        <!--falta edad,organizacion social,cargo,direccion,telefono-->
        <!--distancia entre dos editText = 60dp -->
        <!--distancia entre un editText y un spinner = 80dp -->
        <!--distancia entre un spinner y un = 80dp -->
        <!--distancia entre dos spinners = 50dp -->

        <Button
            android:id="@+id/btnSiguiente_petic"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1150dp"
            android:background="@color/colorPrimaryDark"
            android:text="Siguiente"
            android:textColor="#ffffff" />

    </RelativeLayout>
</ScrollView>