<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:toolbarId="@+id/toolbar"

            app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
            app:contentScrim="?attr/colorPrimary"
            android:fitsSystemWindows="false">

            <ImageView
                android:id="@+id/app_bar_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                android:src="@drawable/img_asset_27hdpi"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />



            <LinearLayout
                android:id="@+id/btnLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:weightSum="1"
                android:paddingLeft="0dp">

                <ImageView
                android:layout_width="216dp"
                android:layout_height="65dp"
                app:srcCompat="@drawable/img_asset_29xhdpi"
                android:id="@+id/imageView6"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical" />

                <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_asset_45hdpi"
                android:id="@+id/noticiaButton"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:layout_gravity="right|center_vertical"
                    android:paddingLeft="15dp"
                    android:layout_weight="0.19"
                    android:background="@null"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/img_asset_46hdpi"
                    android:id="@+id/contactoButton"
                    android:layout_gravity="right|center_vertical"
                    android:layout_weight="0.33"
                    android:adjustViewBounds="true"
                    android:paddingLeft="10dp"
                    android:background="@null"/>

            </LinearLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="593dp"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/nestedLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:weightSum="1"
            android:orientation="vertical"
            android:paddingLeft="0dp">

            <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/img_asset_48hdpi"
            android:id="@+id/imageView7"
            android:adjustViewBounds="true" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:id="@+id/PRUEBA"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle"
                android:background="@drawable/img_asset_49hdpi"
                android:autoText="false"
                android:textColor="@android:color/background_light" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="170dp">

            </FrameLayout>

            <LinearLayout
                android:id="@+id/buttonLinear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:weightSum="1"
                android:orientation="horizontal"
                android:paddingLeft="0dp">


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/img_asset_51hdpi"
                    android:id="@+id/imageButton"
                    android:adjustViewBounds="false"
                    android:cropToPadding="false"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="10dp"
                    android:background="@null"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/img_asset_52hdpi"
                    android:id="@+id/imageButton2"
                    android:layout_weight="0.35"
                    android:paddingTop="10dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:background="@null"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/img_asset_53hdpi"
                    android:id="@+id/imageButton3"
                    android:layout_weight="0.32"
                    android:paddingTop="10dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:background="@null"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/img_asset_54hdpi"
                    android:id="@+id/imageButton4"
                    android:paddingTop="10dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:background="@null"/>

            </LinearLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/img_asset_55hdpi"
                    android:id="@+id/imageView10"
                    android:layout_below="@+id/imageButton5"
                    android:adjustViewBounds="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_alignParentStart="true"
                    android:id="@+id/imageView11"
                    android:layout_alignStart="@+id/imageButton5"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_asset_37hdpi"
                    android:layout_above="@+id/imageView10" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/img_asset_40hdpi"
                    android:id="@+id/imageButton6"
                    android:layout_marginEnd="68dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@null"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/img_asset_41hdpi"
                    android:id="@+id/imageButton7"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@null"/>

                <TextView
                    android:text="www.cpccs.gob.ec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp"
                    android:layout_centerInParent="false"
                    tools:text="www.cpccs.gob.ec"
                    android:layout_marginStart="26dp"
                    android:paddingTop="5dp"
                    android:layout_below="@+id/imageView11"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/img_asset_38hdpi"
                    android:id="@+id/imageButton5"
                    android:layout_marginEnd="13dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toStartOf="@+id/imageButton6"
                    android:background="@null"/>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
