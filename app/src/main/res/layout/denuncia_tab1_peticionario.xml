<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_height="1280dp">

            <TextView
                android:text="Identidad Reservada"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="16sp" />


            <Spinner
                android:gravity="left"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lbl_Nombres"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_Nombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombres"
                    android:maxLength="25"
                    android:inputType="textCapWords"
                    android:textSize="16sp"  />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lbl_Apellidos"
                android:layout_marginTop="110dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_Apellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellidos"
                    android:maxLength="25"
                    android:textSize="16sp"
                    android:inputType="textCapWords"

                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lbl_edad"
                android:layout_marginTop="170dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_edad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edad"
                    android:maxLength="2"
                    android:textSize="16sp"
                    android:inputType="number"

                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lbl_Correo"
                android:layout_marginTop="230dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo electrónico"
                    android:maxLength="25"
                    android:textSize="16sp"
                    android:inputType="textEmailAddress"

                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lbl_organizacion_social"
                android:layout_marginTop="410dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_org_social"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Organización Social"
                    android:maxLength="25"
                    android:textSize="16sp"
                    android:inputType="textCapWords"

                    />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:text="Tipo de Identificación"
                android:layout_width="wrap_content"
                android:layout_marginTop="540dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="16sp" />

            <Spinner
                android:gravity="left"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                android:layout_alignTop="@+id/textView2"
                android:layout_alignParentEnd="true" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/lbl_TipoIdentificacion"
                android:layout_width="match_parent"
                android:layout_marginTop="590dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_tipoIdentificacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Identificación"
                    android:inputType="number"
                    android:maxLength="11"
                    />
            </android.support.design.widget.TextInputLayout>



            <TextView
                android:text="Género"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_marginTop="670dp"
                android:id="@+id/textView3"
                android:textSize="17sp" />


            <Spinner
                android:gravity="left"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner3"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Estado Civil"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_marginTop="720dp"
                android:id="@+id/textView4"
                android:textSize="17sp" />

            <Spinner
                android:gravity="left"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner4"
                android:layout_alignTop="@+id/textView4"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Nivel de educación"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_marginTop="770dp"
                android:id="@+id/textView5"
                android:textSize="17sp" />

            <Spinner
                android:gravity="left"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner5"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignParentEnd="true" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_Cargo"
            android:layout_width="match_parent"
            android:layout_marginTop="820dp"
            android:layout_height="wrap_content">

        </android.support.design.widget.TextInputLayout>

            <TextView
                android:text="Ciudad"
                android:layout_width="wrap_content"
                android:layout_marginTop="22dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textSize="17sp"
                android:layout_below="@+id/txtPais"
                android:layout_alignEnd="@+id/textView3" />

            <AutoCompleteTextView

                android:id="@+id/txt_ciudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese la ciudad"
                android:layout_below="@+id/textView9"
                android:textSize="16sp" />


            <TextView
                android:text="Etnia"
                android:layout_width="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:id="@+id/textEtnia"
                android:textSize="17sp"
                android:layout_below="@+id/txt_ciudad"
                />

            <Spinner
                android:gravity="left"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerEtnia"
                android:layout_alignTop="@+id/textEtnia"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="Siguiente"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/btnInfoPeticionario"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/textEtnia"
                android:layout_alignStart="@+id/spinnerEtnia"
                android:layout_marginStart="60dp" />

            <EditText
                android:id="@+id/txt_cargo_peticionario_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="25"
                android:inputType="textCapWords"
                android:hint="Cargo"
                android:layout_below="@+id/lbl_Cargo"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp" />

            <TextView
                android:text="Pais"
                android:layout_width="wrap_content"
                android:layout_marginTop="53dp"
                android:textColor="#000000"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:id="@+id/textPais"
                android:textSize="17sp"
                android:layout_below="@+id/txt_cargo_peticionario_d"
                android:layout_alignStart="@+id/textView9" />

            <EditText
                android:id="@+id/txtPais"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Ecuador"
                android:layout_alignBottom="@+id/textPais"
                android:layout_alignParentEnd="true" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lbl_telefono"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_Correo"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/txt_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Teléfono"
                    android:maxLength="10"
                    android:textSize="16sp"
                    android:inputType="number"

                    android:layout_alignBottom="@+id/lbl_celular"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lbl_celular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_telefono"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/txt_celular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Celular"
                    android:maxLength="10"
                    android:textSize="16sp"
                    android:inputType="number"

                    android:layout_marginTop="17dp"
                    android:layout_below="@+id/lbl_telefono"
                    android:layout_alignStart="@+id/textView9"
                    android:layout_weight="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lbl_direccion"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_celular"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/txt_direccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dirección"
                    android:maxLength="25"
                    android:textSize="16sp"
                    android:inputType="textCapWords"

                    />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>
</ScrollView>

    <!--falta edad,organizacion social,cargo,direccion,telefono-->
    <!--distancia entre dos editText = 60dp -->
    <!--distancia entre un editText y un spinner = 80dp -->
    <!--distancia entre dos spinners = 50dp -->
